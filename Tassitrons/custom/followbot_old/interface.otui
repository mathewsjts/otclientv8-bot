SwitchAndTextEditPanel < Panel
  height: 60
  padding: 1

  BotSwitch
    id: followSwitch
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 3
    text-align: center
    height: 20

    $on:
      text: Stop follow

    $!on:
      text: Start follow

  BotTextEdit
    id: followingTarget
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 3
